var $table = $('<table>');
<% @pages.each do |p| %>
    $table.append('<%= j(render('children_row', p: p, index: @index, :formats => [:html])) %>');
<% end %>
$('#row-<%= @page.id %>').find('.children-control').html('<%=j( link_to icon('minus'), hide_children_page_path(@page, index: @index), remote: true )%>');
$table.find('tr').insertAfter($('#row-<%= @page.id %>'));
